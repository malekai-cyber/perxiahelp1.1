# ============================================
# PERXIA HELP - ENVIRONMENT VARIABLES
# ============================================
# Copia este archivo como .env y completa con tus valores reales
# NUNCA subas el archivo .env a Git

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:8080

# ============================================
# AZURE AD AUTHENTICATION
# ============================================
# Crear App Registration en Azure Portal > Azure Active Directory
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here
AZURE_REDIRECT_URI=http://localhost:3000/auth/callback

# ============================================
# AZURE AI FOUNDRY (DeepSeek + Embeddings)
# ============================================
# Crear recurso en Azure AI Foundry y desplegar modelos
AZURE_OPENAI_ENDPOINT=https://your-resource.services.ai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here

# Deployments de modelos de chat
DEEPSEEK_DEPLOYMENT_V3=DeepSeek-V3.1
DEEPSEEK_DEPLOYMENT_R1=DeepSeek-R1-0528

# Deployment de embeddings
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# API Version
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# ============================================
# AZURE AI SEARCH
# ============================================
# Crear recurso Azure AI Search (anteriormente Cognitive Search)
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_API_KEY=your-search-api-key-here
AZURE_SEARCH_INDEX_NAME=perxia-documents

# ============================================
# AZURE DOCUMENT INTELLIGENCE
# ============================================
# Crear recurso Azure Document Intelligence (anteriormente Form Recognizer)
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-doc-intel.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-document-intelligence-key-here

# ============================================
# AZURE STORAGE
# ============================================
# Crear Storage Account y container "documents"
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONTAINER_NAME=documents
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-storage-account;AccountKey=your-storage-key;EndpointSuffix=core.windows.net

# ============================================
# SECURITY
# ============================================
# Generar valores seguros y únicos para producción
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-change-this-in-production

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info

# ============================================
# CORS
# ============================================
# Orígenes permitidos separados por coma
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000

# ============================================
# OPTIONAL: MICROSOFT COPILOT STUDIO
# ============================================
COPILOT_STUDIO_URL=
